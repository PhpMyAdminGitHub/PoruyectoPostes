<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondobueno"
    tools:context=".QuejaAgua">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="377dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:text="Quejas y Sugerencias de tomas de agua"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <Spinner
        android:id="@+id/spinner_countries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp" />

    <LinearLayout
        android:layout_width="303dp"
        android:layout_height="80dp"
        android:layout_below="@+id/spinner_countries"
        android:layout_alignBottom="@+id/spinner_countries"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="-91dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FAF9F9"
            android:textSize="25dp"
            android:text="Numero de toma:" />

        <TextView
            android:id="@+id/Num_Toma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FAF9F9"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/Num_Toma0"
            android:layout_width="1dp"
            android:layout_height="1dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="104dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtquejat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#FAF9F9"
            android:textSize="25dp" />


        <Button
            android:id="@+id/btnregistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_dos"
            android:text="Registrar"
            android:textColor="#ffffff" />

    </LinearLayout>

</RelativeLayout>